---
  - name: Restart an EC2 Instance
    hosts: all
    connection: local
    gather_facts: False

    # Task that will be used to restart an EC2 Instance
    tasks:
      - name: restart instance
        local_action:
          module: ec2
          instance_ids: '{{ instance_ids }}'
          region: '{{ region }}'
          instance_tags:
            env: "{{ env }}"
          state: restarted
